        @csrf
        <input type="file" name="file" required>
        <button type="submit">Upload</button>
    </form>
    <h3>Uploaded Files</h3>
    <ul>
        @foreach ($files as $file)
            <li>
                {{ $file->filename }}
                <form action="/files/{{ $file->id }}" method="POST" style="display:inline;">
                    @csrf @method('DELETE')
                    <button type="submit">Delete</button>
                </form>
            </li>
        @endforeach
    </ul>
</body>
</html>

