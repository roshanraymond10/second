        function getWeather() {
            let city = $('#city').val();
            $.get('/weather', { city: city }, function(response) {
                $('#weatherInfo').text(`Temperature: ${response.main.temp}Â°C, Weather: ${response.weather[0].description}`);
            });
        }
    </script>
